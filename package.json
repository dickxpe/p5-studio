{
  "name": "live-p5-launcher",
  "displayName": "LIVE P5 LAUNCHER",
  "description": "Launch and edit P5 in VS Code",
  "version": "1.0.0",
  "author": {
    "name": "peterdickx"
  },
  "publisher": "peterdickx",
  "engines": {
    "vscode": "^1.90.0"
  },
  "keywords": [
    "p5",
    "live",
    "auto-reload"
  ],
  "categories": [
    "Visualization",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "files": [
    "out",
    "src",
    "assets",
    "node_modules",
    "p5types",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.live-p5",
        "title": "Open live p5 panel",
        "icon": {
          "light": "images/p5.svg",
          "dark": "images/p5.svg"
        }
      },
      {
        "command": "extension.create-jsconfig",
        "title": "Setup P5 Project"
      },
      {
        "command": "extension.openP5Ref",
        "title": "P5 Reference"
      },
      {
        "command": "extension.openSelectedText",
        "title": "Search in P5 Reference"
      },
      {
        "command": "extension.reload-p5-sketch",
        "title": "Reload P5 Sketch",
        "icon": {
          "light": "images/reload.svg",
          "dark": "images/reload.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.live-p5",
          "group": "navigation",
          "when": "isP5js && (editorLangId == javascript || editorLangId == typescript) && !hasP5Webview"
        },
        {
          "command": "extension.reload-p5-sketch",
          "group": "navigation",
          "when": "isP5js && (editorLangId == javascript || editorLangId == typescript) && hasP5Webview"
        }
      ],
      "editor/context": [
        {
          "command": "extension.openSelectedText",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "mocha --require ts-node/register test/**/*.test.ts",
    "test-watch": "mocha -w --require ts-node/register test/**/*.test.ts",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.3",
    "chai": "^4.2.0",
    "mocha": "^11.0.1",
    "ts-node": "^8.8.1",
    "vscode": "^1.1.34"
  },
  "dependencies": {
    "@types/p5": "^0.9.0",
    "@types/vscode": "^1.90.0",
    "open": "^10.1.0",
    "path": "^0.12.7",
    "recast": "^0.18.7",
    "typescript": "4.5",
    "vscode-uri": "3.0.8"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peterdickx/vscode-live-p5/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/peterdickx/vscode-live-p5.git"
  },
  "homepage": "https://github.com/peterdickx/vscode-live-p5#readme"
}