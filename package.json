{
  "name": "live-p5-launcher",
  "displayName": "LIVE P5 LAUNCHER",
  "description": "Launch and edit P5 in VS Code",
  "version": "1.3.7",
  "icon": "images/ICON.png",
  "author": {
    "name": "peterdickx"
  },
  "publisher": "peterdickx",
  "engines": {
    "vscode": "^1.90.0"
  },
  "keywords": [
    "p5",
    "live",
    "auto-reload"
  ],
  "categories": [
    "Visualization",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "files": [
    "dist",
    "assets",
    "images",
    "p5types"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.live-p5",
        "title": "Live P5: Open P5 Panel",
        "icon": {
          "light": "images/p5.svg",
          "dark": "images/p5.svg"
        }
      },
      {
        "command": "extension.reload-p5-sketch",
        "title": "Reload P5 Sketch",
        "icon": {
          "light": "images/run.svg",
          "dark": "images/run.svg"
        }
      },
      {
        "command": "extension.create-jsconfig",
        "title": "Live P5: Setup new project"
      },
      {
        "command": "extension.openP5Ref",
        "title": "ðŸ“•Open P5.js Reference"
      },
      {
        "command": "extension.openSelectedText",
        "title": "ðŸ“•Search in P5.js Reference"
      },
      {
        "command": "liveP5.toggleReloadWhileTypingOn",
        "title": "Disable Reload on Typing",
        "icon": {
          "light": "images/keyboard.svg",
          "dark": "images/keyboard.svg"
        },
        "category": "LIVE P5"
      },
      {
        "command": "liveP5.toggleReloadWhileTypingOff",
        "title": "Enable Reload on Typing",
        "icon": {
          "light": "images/keyboard_off.svg",
          "dark": "images/keyboard_off.svg"
        },
        "category": "LIVE P5"
      },
      {
        "command": "liveP5.scrollOutputToEnd",
        "title": "Scroll Output to End",
        "category": "LIVE P5"
      },
      {
        "command": "liveP5.refreshIntelliSense",
        "title": "Live P5: Refresh IntelliSense",
        "category": "LIVE P5"
      },
      {
        "command": "extension.duplicateFile",
        "title": "Duplicate",
        "category": "File"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.live-p5",
          "group": "navigation",
          "when": "isP5js && !hasP5Webview && (editorLangId == javascript || editorLangId == typescript)"
        },
        {
          "command": "extension.reload-p5-sketch",
          "group": "navigation",
          "when": "isP5js && hasP5Webview && (editorLangId == javascript || editorLangId == typescript)"
        },
        {
          "command": "liveP5.toggleReloadWhileTypingOn",
          "group": "navigation@2",
          "when": "isP5js && liveP5ReloadWhileTypingEnabled == true && (editorLangId == javascript || editorLangId == typescript)"
        },
        {
          "command": "liveP5.toggleReloadWhileTypingOff",
          "group": "navigation@2",
          "when": "isP5js && liveP5ReloadWhileTypingEnabled != true && (editorLangId == javascript || editorLangId == typescript)"
        }
      ],
      "explorer/context": [
        {
          "command": "extension.duplicateFile",
          "group": "5_cutcopypaste@99"
        }],
      "editor/context": [
        {
          "command": "extension.openSelectedText",
          "when": "editorHasSelection && isJsOrTs",
          "group": "navigation@0"
        },
        {
          "command": "liveP5.scrollOutputToEnd",
          "when": "resourceScheme == output"
        }
      ],
      "commandPalette": [
        {
          "command": "liveP5.scrollOutputToEnd",
          "when": "true"
        },
        {
          "command": "liveP5.refreshIntelliSense",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "LIVE P5 Launcher Settings",
      "properties": {
        "liveP5.reloadWhileTyping": {
          "type": "boolean",
          "default": true,
          "description": "Determines if the P5 webpanel automatically reloads while typing.",
          "order": 1
        },
        "liveP5.reloadOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Determines if the P5 webpanel automatically reloads when saving the file.",
          "order": 0
        },
        "liveP5.showReloadButton": {
          "type": "boolean",
          "default": true,
          "description": "Show the reload button in the webview toolbar.",
          "order": 6
        },
        "liveP5.showRecordButton": {
          "type": "boolean",
          "default": false,
          "description": "Show the record (capture) button in the webview toolbar.",
          "order": 7
        },
        "liveP5.debounceDelay": {
          "type": "number",
          "default": 300,
          "minimum": 100,
          "description": "Debounce delay in milliseconds for live reload while typing.",
          "order": 3
        },
        "liveP5.varDrawerDefaultState": {
          "type": "string",
          "enum": [
            "open",
            "collapsed",
            "hidden"
          ],
          "default": "collapsed",
          "description": "Default state of the global variable drawer in the P5 panel. 'open' shows the drawer by, 'collapsed' shows only the tab, 'hidden' hides the drawer completely.",
          "order": 4
        },
        "liveP5.showSetupNotification": {
          "type": "boolean",
          "default": true,
          "description": "Show a setup prompt when the workspace has no P5 configuration (jsconfig.json). Choose 'Don't show again' to turn this off.",
          "order": 9
        },
        "liveP5.oscRemoteAddress": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "OSC remote address (host to send OSC messages to).",
          "order": 10
        },
        "liveP5.oscRemotePort": {
          "type": "number",
          "default": 57120,
          "description": "OSC remote port (port to send OSC messages to).",
          "order": 11
        },
        "liveP5.oscLocalPort": {
          "type": "number",
          "default": 57121,
          "description": "OSC local port (port to listen for incoming OSC messages).",
          "order": 12
        },
        "liveP5.varControlDebounceDelay": {
          "type": "number",
          "default": 500,
          "minimum": 0,
          "description": "Debounce delay (ms) for global variable drawer input changes before applying them to the sketch. Independent from reloadWhileTyping debounce.",
          "order": 5
        },
        "liveP5.SingleP5Panel": {
          "type": "boolean",
          "default": true,
          "description": "If enabled, only one P5 webpanel can be open at a time. Opening a new panel closes all others.",
          "order": 8
        }
      }
    },
    "keybindings": [
      {
        "command": "extension.live-p5",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "editorTextFocus && isJsOrTs && !hasP5Webview"
      },
      {
        "command": "extension.reload-p5-sketch",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "editorTextFocus && isJsOrTs && hasP5Webview"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "webpack --mode production",
    "compile": "tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "mocha --require ts-node/register test/**/*.test.ts",
    "test-watch": "mocha -w --require ts-node/register test/**/*.test.ts",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.3",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^13.0.1",
    "mocha": "^11.0.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^8.8.1",
    "vscode": "^1.1.34",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "osc": "^2.4.5"
  },
  "dependencies": {
    "@types/p5": "^0.9.0",
    "@types/vscode": "^1.90.0",
    "open": "^10.1.0",
    "osc": "^2.4.5",
    "path": "^0.12.7",
    "recast": "^0.18.7",
    "typescript": "4.5",
    "vscode-uri": "3.0.8"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dickxpe/vscode-live-p5/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dickxpe/vscode-live-p5.git"
  },
  "homepage": "https://github.com/dickxpe/vscode-live-p5"
}