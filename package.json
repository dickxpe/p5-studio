{
  "name": "p5-studio",
  "displayName": "P5 Studio",
  "description": "Live code p5js in VS Code",
  "version": "1.0.0",
  "icon": "images/ICON.png",
  "author": {
    "name": "peterdickx"
  },
  "publisher": "peterdickx",
  "engines": {
    "vscode": "^1.90.0"
  },
  "keywords": [
    "p5",
    "live",
    "auto-reload",
    "preview",
    "blockly",
    "osc"
  ],
  "categories": [
    "Visualization",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "files": [
    "dist",
    "assets",
    "images",
    "p5types"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.live-p5",
        "title": "P5 Studio Open P5 Panel",
        "icon": {
          "light": "images/p5.svg",
          "dark": "images/p5.svg"
        }
      },
      {
        "command": "extension.open-blockly",
        "title": "Blockly ",
         "icon": {
          "light": "images/blockly.png",
          "dark": "images/blockly.png"
        }
      },
      {
        "command": "extension.reload-p5-sketch",
        "title": "Reload P5 Sketch",
        "icon": {
          "light": "images/run.svg",
          "dark": "images/run.svg"
        }
      },
      {
        "command": "extension.create-jsconfig",
        "title": "P5 Studio Setup new project"
      },
      {
        "command": "extension.openP5Ref",
        "title": "ðŸ“•Open P5.js Reference"
      },
      {
        "command": "extension.openSelectedText",
        "title": "ðŸ“•Search in P5.js Reference"
      },
      {
        "command": "P5Studio.toggleReloadWhileTypingOn",
        "title": "Disable Reload on Typing",
        "icon": {
          "light": "images/keyboard_off.svg",
          "dark": "images/keyboard.svg"
        },
        "category": "P5 Studio"
      },
      {
        "command": "P5Studio.toggleReloadWhileTypingOff",
        "title": "Enable Reload on Typing",
        "icon": {
          "light": "images/keyboard.svg",
          "dark": "images/keyboard_off.svg"
        },
        "category": "P5 Studio"
      },
      {
        "command": "P5Studio.scrollOutputToEnd",
        "title": "Scroll Output to End",
        "category": "P5 Studio"
      },
      {
        "command": "extension.duplicateFile",
        "title": "Duplicate",
        "category": "File"
      }
      ,
      {
        "command": "extension.decouple-blockly",
        "title": "Decouple Blockly",
        "category": "File"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.live-p5",
          "group": "navigation",
          "when": "isP5js && !hasP5Webview && (editorLangId == javascript || editorLangId == typescript)"
        },
        {
          "command": "extension.open-blockly",
          "group": "navigation",
          "when": "config.P5Studio.enableBlockly == true && isP5js && (editorLangId == javascript || editorLangId == typescript)"
        },
        {
          "command": "extension.reload-p5-sketch",
          "group": "navigation",
          "when": "isP5js && hasP5Webview && (editorLangId == javascript || editorLangId == typescript)"
        },
        {
          "command": "P5Studio.toggleReloadWhileTypingOn",
          "group": "navigation@2",
          "when": "isP5js && liveP5ReloadWhileTypingEnabled == true && (editorLangId == javascript || editorLangId == typescript)"
        },
        {
          "command": "P5Studio.toggleReloadWhileTypingOff",
          "group": "navigation@2",
          "when": "isP5js && liveP5ReloadWhileTypingEnabled != true && (editorLangId == javascript || editorLangId == typescript)"
        }
      ],
      "explorer/context": [
        {
          "command": "extension.decouple-blockly",
          "when": "config.P5Studio.enableBlockly == true && (resourceExtname == .js || resourceExtname == .ts)",
          "group": "5_decouple@99"
        },
        {
          "command": "extension.duplicateFile",
          "group": "5_cutcopypaste@99"
        }
      ],
      "editor/context": [
        {
          "command": "extension.openSelectedText",
          "when": "editorHasSelection && isJsOrTs",
          "group": "navigation@0"
        },
        {
          "command": "P5Studio.scrollOutputToEnd",
          "when": "resourceScheme == output"
        }
      ],
      "commandPalette": [
        {
          "command": "P5Studio.scrollOutputToEnd",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "P5 Studio Settings",
      "properties": {
        "P5Studio.reloadWhileTyping": {
          "type": "boolean",
          "default": true,
          "description": "Determines if the P5 webpanel automatically reloads while typing.",
          "order": 1
        },
        "P5Studio.reloadOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Determines if the P5 webpanel automatically reloads when saving the file.",
          "order": 0
        },
        "P5Studio.showReloadButton": {
          "type": "boolean",
          "default": true,
          "description": "Show the reload button in the webview toolbar.",
          "order": 6
        },
        "P5Studio.showRecordButton": {
          "type": "boolean",
          "default": false,
          "description": "Show the record (capture) button in the webview toolbar.",
          "order": 7
        },
        "P5Studio.debounceDelay": {
          "type": "number",
          "default": 300,
          "minimum": 100,
          "description": "Debounce delay in milliseconds for live reload while typing.",
          "order": 3
        },
        "P5Studio.varDrawerDefaultState": {
          "type": "string",
          "enum": [
            "open",
            "collapsed",
            "hidden"
          ],
          "default": "collapsed",
          "description": "Default state of the global variable drawer in the P5 panel. 'open' shows the drawer by, 'collapsed' shows only the tab, 'hidden' hides the drawer completely.",
          "order": 4
        },
        "P5Studio.showSetupNotification": {
          "type": "boolean",
          "default": true,
          "description": "Show a setup prompt when the workspace has no P5 marker (.p5). Choose 'Don't show again' to turn this off.",
          "order": 9
        },
        "P5Studio.oscRemoteAddress": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "OSC remote address (host to send OSC messages to).",
          "order": 10
        },
        "P5Studio.oscLocalAddress": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "OSC local bind address for receiving (e.g. '127.0.0.1' for localhost only, or '0.0.0.0' to accept from the network).",
          "order": 10.5
        },
        "P5Studio.oscRemotePort": {
          "type": "number",
          "default": 57120,
          "description": "OSC remote port (port to send OSC messages to).",
          "order": 11
        },
        "P5Studio.oscLocalPort": {
          "type": "number",
          "default": 57121,
          "description": "OSC local port (port to listen for incoming OSC messages).",
          "order": 12
        },
        "P5Studio.varControlDebounceDelay": {
          "type": "number",
          "default": 500,
          "minimum": 0,
          "description": "Debounce delay (ms) for global variable drawer input changes before applying them to the sketch. Independent from reloadWhileTyping debounce.",
          "order": 5
        },
        "P5Studio.BlockSketchOnWarning": {
          "type": "boolean",
          "default": true,
          "description": "Block running the sketch and show a yellow overlay when semicolon warnings exist. When false, do not show the overlay and run the sketch, but still log the warning to the Output channel.",
          "order": 13
        },
        "P5Studio.SingleP5Panel": {
          "type": "boolean",
          "default": true,
          "description": "If enabled, only one P5 webpanel can be open at a time. Opening a new panel closes all others.",
          "order": 8
        }
        ,
        "P5Studio.enableBlockly": {
          "type": "boolean",
          "default": true,
          "description": "Enable Blockly integration: shows the Blockly button and the Decouple Blockly context menu entry.",
          "order": 14
        }
        ,
        "P5Studio.blocklyTheme": {
          "type": "string",
          "enum": ["dark", "light", "auto"],
          "default": "dark",
          "description": "Blockly theme to use in the Blockly panel. 'auto' currently resolves to 'dark'.",
          "order": 15
        }
        ,
        "P5Studio.stepRunDelayMs": {
          "type": "number",
          "default": 250,
          "minimum": 0,
          "description": "Delay (in milliseconds) used by the Step-Run button between setup() statements and at the start of each loop iteration.",
          "order": 16
        }
      }
    },
    "keybindings": [
      {
        "command": "extension.live-p5",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "editorTextFocus && isJsOrTs && !hasP5Webview"
      },
      {
        "command": "extension.reload-p5-sketch",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "editorTextFocus && isJsOrTs && hasP5Webview"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "webpack --mode production",
    "compile": "tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "mocha --require ts-node/register test/**/*.test.ts",
    "test-watch": "mocha -w --require ts-node/register test/**/*.test.ts",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.3",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^13.0.1",
    "mocha": "^11.0.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^8.8.1",
    "vscode": "^1.1.34",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "osc": "^2.4.5"
  },
  "dependencies": {
    "@types/p5": "^0.9.0",
    "@types/vscode": "^1.90.0",
    "open": "^10.1.0",
    "osc": "^2.4.5",
    "path": "^0.12.7",
    "recast": "^0.18.7",
    "typescript": "4.5",
    "vscode-uri": "3.0.8"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dickxpe/p5-studio/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dickxpe/p5-studio.git"
  },
  "homepage": "https://github.com/dickxpe/p5-studio"
}